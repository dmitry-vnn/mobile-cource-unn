<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialogSelectorsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="1"
            app:useDefaultMargins="true">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_text_dialog_selector"
                android:name="dmitry.mobilecourseunnlab3.fragments.TextDialogSelectorFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_gravity="center_horizontal"
                tools:layout="@layout/fragment_text_dialog_selector" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_date_picker_dialog_selector"
                android:name="dmitry.mobilecourseunnlab3.fragments.DatePickerDialogSelectorFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_gravity="center_horizontal"
                tools:layout="@layout/fragment_date_picker_dialog_selector" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_time_picker_dialog_selector"
                android:name="dmitry.mobilecourseunnlab3.fragments.TimePickerDialogSelectorFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_gravity="center_horizontal"
                tools:layout="@layout/fragment_time_picker_dialog_selector" />

        </androidx.gridlayout.widget.GridLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>