<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SquareTransformFragment">

    <View
        android:id="@+id/square"
        android:layout_width="@dimen/transform_square_side_size"
        android:layout_height="@dimen/transform_square_side_size"
        android:background="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/transformed_square"
        android:layout_width="@dimen/transform_square_side_size"
        android:layout_height="@dimen/transform_square_side_size"
        android:layout_marginStart="20dp"
        android:background="#000000"
        android:rotation="-45"
        android:scaleX="0.5"
        app:layout_constraintStart_toEndOf="@+id/square"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>