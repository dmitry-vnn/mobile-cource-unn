<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SquaresGridFragment">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/rectangle_1"
            android:layout_width="@dimen/square_side_size"
            android:layout_height="@dimen/square_side_size"
            android:background="#FF0000" />

        <View
            android:id="@+id/rectangle_2"
            android:layout_width="@dimen/square_side_size"
            android:layout_height="@dimen/square_side_size"
            android:layout_marginStart="@dimen/grid_spacing"
            android:background="#00E63A" />

        <View
            android:id="@+id/rectangle_3"
            android:layout_width="@dimen/square_side_size"
            android:layout_height="@dimen/square_side_size"
            android:layout_marginStart="@dimen/grid_spacing"
            android:background="#3F51B5" />

        <View
            android:id="@+id/rectangle_4"
            android:layout_width="@dimen/square_side_size"
            android:layout_height="@dimen/square_side_size"
            android:layout_marginTop="@dimen/grid_spacing"
            android:background="#E91E63" />

        <View
            android:id="@+id/rectangle_opacity"
            android:layout_width="@dimen/square_side_size"
            android:layout_height="@dimen/square_side_size"
            android:layout_marginTop="@dimen/grid_spacing"
            android:layout_marginStart="@dimen/grid_spacing"
             />

        <View
            android:id="@+id/rectangle_5"
            android:layout_width="@dimen/square_side_size"
            android:layout_height="@dimen/square_side_size"
            android:layout_marginTop="@dimen/grid_spacing"
            android:layout_marginStart="@dimen/grid_spacing"
            android:background="#000000" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>